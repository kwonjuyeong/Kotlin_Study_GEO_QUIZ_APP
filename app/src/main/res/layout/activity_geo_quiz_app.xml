<?xml version="1.0" encoding="utf-8"?>
<!--Linear Layout이 루트 요소이므로 XML 네임 스페이스를 지정해야한다.-->
<!--
match_parent = 자신의 부모만큼의 크기가 된다.
wrap_content = 자신이 갖는 콘텐츠에 필요한 크기가 된다.
orientation = 수직(vertical), 수평(horizontal)
padding = 안쪽 여백
margin = 바깥쪽 여백
text = @string/ 형태로 쓰는 것을 권장한다.  -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GeoQuizApp">

    <TextView
        android:id="@+id/question_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding = "24dp"
        android:text = "@string/question_australia"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/true_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/true_text"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/false_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/false_text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageButton
        android:id="@+id/privious_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prrevious"
        android:layout_marginEnd="10dp"
        android:src="@drawable/arrow_left"/>
    <ImageButton
    android:id="@+id/next_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/next_text"
    android:src="@drawable/arrow_right"/>
    </LinearLayout>


</LinearLayout>